{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "12.3.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "piechart",
      "name": "Pie chart",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "table",
      "name": "Table",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "id": 1,
      "title": "Total Batteries",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(homeassistant_binary_sensor_quantities_quantity{instance=~\"$instance\", type=~\"$battery_type\", friendly_name=~\"$friendly_name\"})",
          "legendFormat": "Total",
          "interval": ""
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "green",
                "value": 30
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "id": 2,
      "title": "Low Battery Count",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(homeassistant_binary_sensor_quantities_active_quantity{instance=~\"$instance\", type=~\"$battery_type\", friendly_name=~\"$friendly_name\"})",
          "legendFormat": "Low"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "orange",
                "value": 1
              },
              {
                "color": "red",
                "value": 3
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "piechart",
      "id": 3,
      "title": "Battery Stock by Type",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (type) (homeassistant_binary_sensor_quantities_quantity{instance=~\"$instance\", type=~\"$battery_type\", friendly_name=~\"$friendly_name\"})",
          "legendFormat": "{{type}}"
        }
      ],
      "options": {
        "displayLabels": [
          "name",
          "value"
        ],
        "legend": {
          "displayMode": "visible",
          "placement": "right",
          "showLegend": true
        },
        "pieType": "pie",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "id": 4,
      "title": "Instances Below Threshold",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "targets": [
        {
          "refId": "A",
          "expr": "count by (instance, type) (homeassistant_binary_sensor_quantities_quantity{instance=~\"$instance\", type=~\"$battery_type\", friendly_name=~\"$friendly_name\"} < 3)",
          "legendFormat": "{{instance}} - {{type}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "background",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "orange",
                "value": 1
              },
              {
                "color": "red",
                "value": 2
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "id": 5,
      "title": "Battery Inventory",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 14
      },
      "targets": [
        {
          "refId": "A",
          "expr": "homeassistant_binary_sensor_quantities_quantity{instance=~\"$instance\", type=~\"$battery_type\", friendly_name=~\"$friendly_name\"}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            }
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "mode": "gradient",
                  "type": "color-background"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "filterByValue",
          "options": {
            "filters": [
              {
                "fieldName": "instance",
                "matcher": {
                  "id": "matches",
                  "options": "$instance"
                }
              },
              {
                "fieldName": "type",
                "matcher": {
                  "id": "matches",
                  "options": "$battery_type"
                }
              },
              {
                "fieldName": "friendly_name",
                "matcher": {
                  "id": "matches",
                  "options": "$friendly_name"
                }
              }
            ]
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "job": true
            },
            "renameByName": {
              "Value": "Quantity",
              "friendly_name": "Device",
              "type": "Battery Type",
              "instance": "Instance",
              "battery_low": "Low"
            }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": [
              {
                "field": "list_index",
                "desc": false
              }
            ]
          }
        }
      ]
    },
    {
      "type": "timeseries",
      "id": 6,
      "title": "Stock vs Low Batteries",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance, type) (homeassistant_binary_sensor_quantities_quantity{instance=~\"$instance\", type=~\"$battery_type\", friendly_name=~\"$friendly_name\"})",
          "legendFormat": "{{instance}} - {{type}} (total)"
        },
        {
          "refId": "B",
          "expr": "sum by (instance, type) (homeassistant_binary_sensor_quantities_active_quantity{instance=~\"$instance\", type=~\"$battery_type\", friendly_name=~\"$friendly_name\"})",
          "legendFormat": "{{instance}} - {{type}} (low)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "single"
        }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 42,
  "style": "",
  "tags": [
    "homeassistant",
    "batteries"
  ],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "label": "Instance",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "includeAll": true,
        "multi": true,
        "query": "label_values(homeassistant_binary_sensor_quantities_quantity, instance)",
        "refresh": 1,
        "sort": 1
      },
      {
        "name": "battery_type",
        "type": "query",
        "label": "Battery Type",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "includeAll": true,
        "multi": true,
        "query": "label_values(homeassistant_binary_sensor_quantities_quantity, type)",
        "refresh": 1,
        "sort": 1
      },
      {
        "name": "friendly_name",
        "type": "query",
        "label": "Device",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "includeAll": true,
        "multi": true,
        "query": "label_values(homeassistant_binary_sensor_quantities_quantity, friendly_name)",
        "refresh": 1,
        "sort": 1
      }
    ]
  },
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Home Assistant Battery Monitoring",
  "uid": "kla-home-assistant-batteries",
  "version": 1
}
